<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Main Colors of the theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- FAB styling -->
    <style name="FabStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:src">@drawable/plus_24dp</item>
    </style>

    <!-- Empty Text View Style -->
    <style name="EmptyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textSize">@dimen/empty_view_text_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/empty_view_message</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <!-- List Item Styling -->
    <style name="ListItemStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">@dimen/separator_height</item>
        <item name="android:divider">@color/divider_color</item>
    </style>

    <!-- Preview Photo of a Product Styling -->
    <style name="ListItemPhotoStyling">
        <item name="android:layout_width">@dimen/preview_photo_dimen</item>
        <item name="android:layout_height">@dimen/preview_photo_dimen</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- List Item Texts' Holder Styling -->
    <style name="ListItemTextHolderStyling">
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Product Details Styling in List Item -->
    <style name="ProductDetailsStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/product_details_text_size</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <!-- Styling of currency in listItem -->
    <style name="ListItemCurrencyStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/local_currency</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/product_details_text_size</item>
    </style>
    <!-- Sale Button Styling -->
    <style name="SaleButtonStyling">
        <item name="android:layout_width">@dimen/sale_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/sale_selector</item>
        <item name="android:focusable">false</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sale_text_size</item>
    </style>

    <!-- ScrollView styling in Detail Activity -->
    <style name="ScrollViewStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- LinearLayout Product Details Holder style-->
    <style name="ProductDetailsHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/standard_padding</item>
    </style>

    <!-- Photo of product styling -->
    <style name="PhotoOfProduct">
        <item name="android:layout_width">@dimen/detail_photo_dimen</item>
        <item name="android:layout_height">@dimen/detail_photo_dimen</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/standard_padding</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/add_photo_placeholder</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Separator View Styling-->
    <style name="SeparatorStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginBottom">@dimen/standard_padding</item>
        <item name="android:layout_marginTop">@dimen/standard_padding</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!-- Styling of LinearLayouts that holds the Label and Input (EditText)-->
    <style name="LinearLayoutHoldersStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/standard_padding</item>
        <item name="android:paddingBottom">@dimen/standard_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Styling of the labels of the product details -->
    <style name="LabelsStyling">
        <item name="android:textSize">@dimen/labels_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Styling of EditText -->
    <style name="EditTextsStyling">
        <item name="android:textSize">@dimen/edit_texts_size</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Edit Product Name Styling -->
    <style name="EditProductNameStyling" parent="EditTextsStyling">
        <item name="android:hint">@string/enter_product_name_hint</item>
        <item name="android:inputType">textCapWords|textNoSuggestions</item>
    </style>

    <!-- Edit Price Styling -->
    <style name="EditPriceStyling" parent="EditTextsStyling">
        <item name="android:hint">@string/enter_product_price_hint</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- Local currancy styling in Edit Price -->
    <style name="LocalCurrencyEditPriceStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/local_currency</item>
    </style>

    <!-- Styling for Sections' Titles in detail activity-->
    <style name="SectionsTitleStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/available_quantity_size</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Available Quantity label styling -->
    <style name="AvailableQuantityStyling" parent="SectionsTitleStyling">
        <item name="android:text">@string/available_quantity</item>
    </style>

    <!-- Increase / Decrease buttons styling -->
    <style name="IncreaseDecreaseButtonsStyling">
        <item name="android:layout_width">@dimen/increase_decrease_btn_dimen</item>
        <item name="android:layout_height">@dimen/increase_decrease_btn_dimen</item>
    </style>

    <!-- Edit Quantity Styling-->
    <style name="EditQuantityStyling">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:hint">0</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textSize">@dimen/available_quantity_size</item>
    </style>

    <!-- Restock options title styling -->
    <style name="RestockTitleStyling" parent="SectionsTitleStyling">
        <item name="android:text">@string/restock_options</item>
    </style>

    <!-- Edit Suppliers Styling -->
    <style name="EditSupplierStyling" parent="EditTextsStyling">
        <item name="android:inputType">textCapWords|textNoSuggestions</item>
        <item name="android:hint">@string/suppliers_name_hint</item>
    </style>

    <!-- Edit Suppliers E-mail Styling -->
    <style name="EditSupplierEmailStyling" parent="EditTextsStyling">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/suppliers_email_hint</item>
    </style>

    <!-- Edit Restock Quantity Styling -->
    <style name="EditRestockQuantityStyling" parent="EditTextsStyling">
        <item name="android:inputType">numberSigned</item>
        <item name="android:hint">@string/restock_quantity_hint</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Restock button styling -->
    <style name="RestockButtonStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/restock_button_title</item>
    </style>
</resources>
